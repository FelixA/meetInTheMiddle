<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<ImageView
		android:id="@+id/contacts_personImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:adjustViewBounds="true"
		android:maxHeight="60dp"
		android:maxWidth="60dp"
		android:src="@drawable/person" />

	<TextView
		android:id="@+id/contacts_personName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="16dp"
		android:layout_toRightOf="@+id/contacts_personImage"
		android:text="Name der Person"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		android:id="@+id/contacts_personInteressen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/contacts_personName"
		android:layout_below="@+id/contacts_personName"
		android:text="Interessen"
		android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>