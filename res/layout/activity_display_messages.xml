<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/contacts_layout_id"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".DisplayContactsActivity" >

	<TextView
		android:id="@+id/contacts_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Einladungen"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic" />

	<ListView
		android:id="@+id/messagesInvitations_list"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="8dip"
		android:layout_marginLeft="8dip"
		android:layout_marginRight="8dip"
		android:layout_weight="0.3"
		android:gravity="center_horizontal" >
	</ListView>

	<TextView
		android:id="@+id/contacts_possibleContacts_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="gesendete Anfragen"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic" />

	<ListView
		android:id="@+id/messages_anfragenlist"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="8dip"
		android:layout_marginRight="8dip"
		android:layout_weight="0.4"
		android:gravity="center_horizontal" >
	</ListView>

</LinearLayout>