<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayMeetingsActivity" >

    <TextView
        android:id="@+id/meetings_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meetings_time_button"
        android:layout_alignLeft="@+id/meetings_kindOf_View"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Wann?"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/meetings_OpenMeetingMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/meetings_sendInvitation"
        android:layout_marginBottom="111dp"
        android:onClick="openMeetingMap"
        android:text="Quick Link Map"
        android:textColor="@android:color/secondary_text_light"
        android:textStyle="italic" />

    <Button
        android:id="@+id/meetings_sendInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meetings_OpenMeetingMap"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:onClick="sendInvitation"
        android:text="Anfrage senden"
        android:textColor="@android:color/secondary_text_light"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/meetings_time_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/meetings_kindOfTransportation_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="27dp"
        android:background="@null"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/meetings_kindOf_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meetings_time_button"
        android:layout_alignLeft="@+id/meetings_profile_View"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:text="Art des Treffens"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/meetings_kindOf_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/meetings_kindOf_View"
        android:layout_alignLeft="@+id/meetings_time_button"
        android:background="@null"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/meetings_profile_Button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/meetings_kindOf_button"
        android:layout_alignLeft="@+id/meetings_kindOf_button"
        android:layout_marginBottom="37dp"
        android:background="@null"
        android:onClick="displayContacts"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/meetings_profile_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meetings_profile_Button"
        android:layout_toLeftOf="@+id/meetings_sendInvitation"
        android:text="Mit wem?"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/meetings_kindOfTransportation_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/meetings_sendInvitation"
        android:layout_alignLeft="@+id/meetings_time_button"
        android:layout_marginBottom="33dp"
        android:background="@null"
        android:src="@drawable/truck" />

    <TextView
        android:id="@+id/meetings_kindOfTransportation_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meetings_kindOfTransportation_button"
        android:layout_alignLeft="@+id/meetings_time_view"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Verkehrsmittel"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        android:textStyle="italic" />

</RelativeLayout>