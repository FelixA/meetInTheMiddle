<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".DisplayMeetingsActivity"
	android:background="@drawable/background" >

	<ImageButton
		android:id="@+id/meetings_profile_Button"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_alignLeft="@+id/meetings_kindOf_button"
		android:onClick="displayContacts"
		android:src="@drawable/person" 
		android:background="@null"/>

	<TextView
		android:id="@+id/meetings_profile_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/meetings_profile_Button"
		android:layout_toRightOf="@+id/meetings_profile_Button"
		android:text="Mit wem?"
		android:textSize="25sp"
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic">
	</TextView>

	<ImageButton
		android:id="@+id/meetings_kindOf_button"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_alignLeft="@+id/meetings_time_button"
		android:layout_below="@+id/meetings_profile_Button"
		android:src="@drawable/home" 
		android:background="@null"/>

	<ImageButton
		android:id="@+id/meetings_time_button"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/meetings_kindOf_button"
		android:src="@drawable/clock" 
		android:background="@null"/>

	<TextView
		android:id="@+id/meetings_kindOf_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/meetings_time_button"
		android:layout_toRightOf="@+id/meetings_kindOf_button"
		android:ems="10"
		android:text="Art des Treffens"
		android:textSize="25sp" 
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic"/>

	<ImageButton
		android:id="@+id/meetings_kindOfTransportation_button"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_alignLeft="@+id/meetings_time_button"
		android:layout_below="@+id/meetings_time_view"
		android:src="@drawable/truck" 
		android:background="@null"/>

	<TextView
		android:id="@+id/meetings_kindOfTransportation_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/meetings_kindOfTransportation_button"
		android:layout_alignLeft="@+id/meetings_time_view"
		android:layout_alignParentRight="true"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Verkehrsmittel"
		android:textSize="25sp" 
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic"/>

	<TextView
		android:id="@+id/meetings_time_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/meetings_time_button"
		android:layout_alignLeft="@+id/meetings_kindOf_View"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Wann?"
		android:textSize="25sp" 
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic"/>

	<Button
	    android:id="@+id/meetings_sendInvitation"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/meetings_kindOfTransportation_button"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="16dp"
	    android:onClick="sendInvitation"
	    android:text="Anfrage senden"
	    android:textColor="@android:color/secondary_text_light"
	    android:textStyle="italic" />

</RelativeLayout>