<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".DisplayRequestActivity" >

	<TextView
		android:id="@+id/request_Anfrageerhalten"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="Du hast eine Anfrage erhalten"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="21sp" />

	<TextView
		android:id="@+id/Verkehrsart"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/request_kindOfTransportation_button"
		android:layout_below="@+id/request_time_view"
		android:layout_marginTop="24dp"
		android:text="Gib deine Art der Mobilität an"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="21sp" />

	<Button
		android:id="@+id/request_sendBestaetigung"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignRight="@+id/Verkehrsart"
		android:minHeight="36dp"
		android:minWidth="48dp"
		android:onClick="sendBestaetigung"
		android:text="Bestätigen"
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic" />

	<Button
		android:id="@+id/request_sendAbsagen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/request_sendBestaetigung"
		android:layout_alignLeft="@+id/Verkehrsart"
		android:minHeight="36dp"
		android:minWidth="48dp"
		android:onClick="sendAbsagen"
		android:text="Absagen"
		android:textColor="@android:color/secondary_text_light"
		android:textStyle="italic" />

	<TextView
		android:id="@+id/request_profile_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/meetings_kindOf_button"
		android:layout_toLeftOf="@+id/request_sendBestaetigung"
		android:text="Mit wem?"
		android:textColor="@android:color/secondary_text_light"
		android:textSize="25sp"
		android:textStyle="italic" />

	<TextView
		android:id="@+id/request_kindOf_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/meetings_kindOf_button"
		android:layout_alignLeft="@+id/request_profile_View"
		android:ems="10"
		android:text="Art des Treffens"
		android:textColor="@android:color/secondary_text_light"
		android:textSize="25sp"
		android:textStyle="italic" />

	<ImageButton
		android:id="@+id/meetings_kindOf_button"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignLeft="@+id/meetings_profile_Button"
		android:layout_below="@+id/meetings_profile_Button"
		android:layout_marginTop="22dp"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/home" />

	<TextView
		android:id="@+id/request_time_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/meetings_time_button"
		android:layout_toRightOf="@+id/meetings_kindOf_button"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Wann?"
		android:textColor="@android:color/secondary_text_light"
		android:textSize="25sp"
		android:textStyle="italic" />

	<TextView
		android:id="@+id/request_kindOfTransportation_View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/request_kindOfTransportation_button"
		android:layout_alignLeft="@+id/request_time_view"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Verkehrsmittel"
		android:textColor="@android:color/secondary_text_light"
		android:textSize="25sp"
		android:textStyle="italic" />

	<ImageButton
		android:id="@+id/meetings_time_button"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/request_time_view"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/clock" />

	<ImageButton
		android:id="@+id/meetings_profile_Button"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignLeft="@+id/request_Anfrageerhalten"
		android:layout_below="@+id/request_Anfrageerhalten"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/person" />

	<ImageButton
		android:id="@+id/request_kindOfTransportation_button"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignLeft="@+id/meetings_time_button"
		android:layout_below="@+id/Verkehrsart"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/truck" />

</RelativeLayout>