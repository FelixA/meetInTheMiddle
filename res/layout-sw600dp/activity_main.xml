<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="651dp" >

		<ImageView
			android:id="@+id/imageView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop"
			android:src="@drawable/balkenoben" />

		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/imageButton4"
			android:layout_alignRight="@+id/imageButton4"
			android:layout_below="@+id/imageButton4"
			android:gravity="center"
			android:text="Profil"
			android:textSize="35sp" />

		<TextView
			android:id="@+id/textView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/imageButton2"
			android:layout_alignRight="@+id/imageButton2"
			android:layout_below="@+id/imageButton2"
			android:gravity="center"
			android:text="Treffen"
			android:textSize="35dp" />

		<TextView
		    android:id="@+id/textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/imageButton3"
		    android:layout_below="@+id/imageButton3"
		    android:gravity="center"
		    android:text="Kontakte"
		    android:textSize="35sp" />

		<ImageButton
		    android:id="@+id/imageButton2"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignLeft="@+id/textView2"
		    android:layout_below="@+id/textView2"
		    android:layout_marginTop="21dp"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayMeetings"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/meetinthemiddle" />

		<ImageButton
		    android:id="@+id/imageButton4"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/imageView1"
		    android:layout_marginLeft="100dp"
		    android:layout_marginTop="28dp"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayProfile"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/profil" />

		<ImageButton
		    android:id="@+id/imageButton1"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignLeft="@+id/textView1"
		    android:layout_alignTop="@+id/imageButton2"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayMessages"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/messages" />

		<TextView
		    android:id="@+id/textView5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/textView6"
		    android:layout_alignBottom="@+id/textView6"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="65dp"
		    android:gravity="center"
		    android:text="Einstellungen"
		    android:textSize="35dp" />

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/textView4"
		    android:layout_alignBottom="@+id/textView4"
		    android:layout_alignLeft="@+id/textView5"
		    android:gravity="center"
		    android:text="Nachrichten"
		    android:textSize="35dp" />

		<ImageButton
		    android:id="@+id/imageButton3"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_above="@+id/textView1"
		    android:layout_marginLeft="91dp"
		    android:layout_toRightOf="@+id/textView5"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayContacts"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/freunde" />

		<TextView
		    android:id="@+id/textView6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/imageButton5"
		    android:layout_alignParentBottom="true"
		    android:layout_marginBottom="15dp"
		    android:gravity="center"
		    android:text="FAQ"
		    android:textSize="35dp" />

		<ImageButton
		    android:id="@+id/imageButton5"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_above="@+id/textView6"
		    android:layout_alignLeft="@+id/textView4"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayProfile"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/faq" />

		<ImageButton
		    android:id="@+id/imageButton6"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignLeft="@+id/imageButton1"
		    android:layout_alignTop="@+id/imageButton5"
		    android:adjustViewBounds="true"
		    android:background="@null"
		    android:maxHeight="80dp"
		    android:maxWidth="80dp"
		    android:onClick="displayProfile"
		    android:padding="1dp"
		    android:scaleType="centerCrop"
		    android:src="@drawable/einstellungen" />

	</RelativeLayout>

	<TextView
	    android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="30dp"
	    android:gravity="center"
	    android:text="Neuigkeiten"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="@android:color/secondary_text_light"
	    android:background="@android:color/darker_gray"
	    android:textColorLink="@android:color/secondary_text_light" />

	<ProgressBar
		android:id="@+id/progressbar_loading"
		style="?android:attr/progressBarStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:visibility="gone" />

	<ListView
		android:id="@+id/pastMeetingsView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="15dip"
		android:layout_marginLeft="15dip"
		android:layout_marginRight="15dip"
		android:layout_marginTop="24dp"
		android:background="@null"
		android:gravity="center_horizontal"
		android:text="Neuigkeiten werden geladen" >
	</ListView>

</LinearLayout>