<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:adjustViewBounds="true"
	    android:scaleType="centerCrop"
	    android:src="@drawable/balkenoben" />

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:gravity="center"
	    android:layout_below="@+id/imageView1"
	    android:background="@android:color/darker_gray"
	    android:text="Du hast eine Anfrage erhalten"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="35dp" />

	<Button
	    android:id="@+id/meetings_sendAbsagen"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="#29235C"
	    android:gravity="center"
	    android:onClick="sendAbsage"
	    android:paddingLeft="32dp"
	    android:paddingRight="32dp"
	    android:text="Absagen"
	    android:textColor="@android:color/white"
	    android:textSize="20sp"
	    android:textStyle="italic" />

	<Button
		android:id="@+id/meetings_sendBestaetigung"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:background="#29235C"
		android:gravity="center"
		android:onClick="sendBestaetigung"
		android:paddingLeft="32dp"
		android:paddingRight="32dp"
		android:text="Bestätigen"
		android:textColor="@android:color/white"
		android:textSize="20sp"
		android:textStyle="italic" />

	<TextView
	    android:id="@+id/request_kindOfTransportation_View"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/request_kindOfTransportation_button"
	    android:layout_alignLeft="@+id/request_time_view"
	    android:layout_marginBottom="26dp"
	    android:text="Anfahrt?"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40dp" />

	<TextView
	    android:id="@+id/TextView01"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/request_kindOfTransportation_button"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:gravity="center"
	    android:background="@android:color/darker_gray"
	    android:layout_marginBottom="29dp"
	    android:text="Gib deine Art der Mobilität an"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="35dp" />

	<TextView
	    android:id="@+id/request_profile_View"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/meetings_profile_Button"
	    android:layout_alignLeft="@+id/request_kindOf_View"
	    android:layout_marginBottom="26dp"
	    android:text="Mit wem?"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40dp" />

	<TextView
	    android:id="@+id/request_kindOf_View"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/meetings_kindOf_button"
	    android:layout_marginBottom="29dp"
	    android:layout_toLeftOf="@+id/meetings_sendBestaetigung"
	    android:text="Was tun?"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40dp" />

	<TextView
	    android:id="@+id/request_time_view"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/request_kindOf_View"
	    android:layout_alignTop="@+id/meetings_time_button"
	    android:layout_marginTop="27dp"
	    android:text="Wann?"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40dp" />

	<ImageButton
	    android:id="@+id/meetings_profile_Button"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignRight="@+id/meetings_sendAbsagen"
	    android:layout_below="@+id/textView1"
	    android:layout_marginTop="37dp"
	    android:background="@null"
	    android:scaleType="fitCenter"
	    android:src="@drawable/logo_freunde_hinzufuegen" />

	<ImageButton
	    android:id="@+id/meetings_time_button"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_above="@+id/TextView01"
	    android:layout_alignLeft="@+id/meetings_kindOf_button"
	    android:layout_marginBottom="44dp"
	    android:background="@null"
	    android:scaleType="fitCenter"
	    android:src="@drawable/logo_uhrzeit_hinzufuegen" />

	<ImageButton
	    android:id="@+id/meetings_kindOf_button"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignLeft="@+id/meetings_profile_Button"
	    android:layout_below="@+id/meetings_profile_Button"
	    android:layout_marginTop="28dp"
	    android:background="@null"
	    android:scaleType="fitCenter"
	    android:src="@drawable/logo_aktion_hinzufuegen" />

	<ImageButton
	    android:id="@+id/request_kindOfTransportation_button"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_above="@+id/meetings_sendAbsagen"
	    android:layout_alignRight="@+id/meetings_sendAbsagen"
	    android:layout_marginBottom="37dp"
	    android:background="@null"
	    android:scaleType="fitCenter"
	    android:src="@drawable/logo_anfahrt_hinzufuegen" />

</RelativeLayout>