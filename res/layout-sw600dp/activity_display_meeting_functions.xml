<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/balkenoben" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/meetingHistory"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp"
            android:textSize="30dp"
            android:text="Erstelle ein neues Treffen"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/meetingHistory"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:onClick="meetingHistory"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_uhrzeit_hinzufuegen" />

        <ImageButton
            android:id="@+id/createMeeting"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/textView1"
            android:layout_alignLeft="@+id/meetingHistory"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:onClick="displayMeetings"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/freunde" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/balkenunten" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="67dp"
            android:text="Geplante und vergangene Treffen"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="30dp"
            android:textStyle="italic" />

    </RelativeLayout>

</LinearLayout>